<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item  android:state_enabled="false" >
        <shape android:shape="rectangle">
            <solid android:color="@color/slide_button_background_disabled"></solid>
            <stroke android:color="@color/slide_button_stroke_disabled" android:width="1dp"></stroke>
        </shape>
    </item>

    <item  android:state_pressed="true" >
        <color android:color="@color/slide_button_background_pressed"></color>
    </item>



    <item >
        <color android:color="@color/slide_button_background_normal"></color>
    </item>


</selector>