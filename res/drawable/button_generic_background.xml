<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_enabled="false" >
        <layer-list >
            <item  android:top="3dp" android:left="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="#000000"></solid>
                </shape>
            </item>
            <item android:bottom="3dp" android:right="3dp" >
                <shape android:shape="rectangle">
                    <solid android:color="@color/slide_button_background_disabled"></solid>
                    <stroke android:color="@color/slide_button_stroke_disabled" android:width="1dp"></stroke>

                </shape>
            </item>


        </layer-list>


    </item>

    <item  android:state_pressed="true" >

            <layer-list>
                <item  android:top="3dp" android:left="3dp">
                    <shape android:shape="rectangle">
                        <solid android:color="#000000"></solid>
                    </shape>
                </item>

                <item android:bottom="3dp" android:right="3dp" >
                    <shape android:shape="rectangle">
                        <solid android:color="@color/slide_button_background_pressed"></solid>


                    </shape>

                </item>

        </layer-list>

    </item>



    <item >
            <layer-list>

                <item  android:top="3dp" android:left="3dp">
                    <shape android:shape="rectangle">
                        <solid android:color="#000000"></solid>
                    </shape>
                </item>
                <item android:bottom="3dp" android:right="3dp" >
                    <shape android:shape="rectangle">
                        <solid android:color="@color/slide_button_background_normal"></solid>


                    </shape>
                </item>

            </layer-list>
    </item>


</selector>