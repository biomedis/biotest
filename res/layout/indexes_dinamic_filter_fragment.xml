<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
         >

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/id_dm" android:layout_marginRight="8dp" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/minDateFilterButton"


            />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/maxDateFilterButton"

            android:layout_marginRight="8dp"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view"
            android:id="@+id/filterButton"
            />
</LinearLayout>